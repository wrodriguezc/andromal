<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-12">
        <div class="card">
          <div class="card-header card-header-warning">
            <h4 class="card-title">Andromal options</h4>
          </div>
          <div class="card-body">
            <p class="card-category">Press 'Reset' to delete all malware samples and analysis files collected.<br>This
              action can't be undone.</p>
            {{#if resetted}}
            <p class="card-category" style="color: red;"><i class="material-icons">warning</i>  All data was deleted.</p>
            {{/if}}
            <form action="/reset" method="post">
              <button type="submit" class="btn btn-primary pull-right">Reset </button>
              <div class="clearfix"></div>
            </form>
          </div>
        </div>
      </div>

    </div>
  </div>
</div>