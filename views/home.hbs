<div class="content">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-success card-header-icon">
            <div class="card-icon">
              <i class="material-icons">storage</i>
            </div>
            <p class="card-category">Disk storage (Used/Total)</p>
            <h3 class="card-title">{{diskSpace.used}}/{{diskSpace.size}}
              <small>GB</small>
            </h3>
          </div>
        </div>
      </div>
      <div class="col-lg-6 col-md-6 col-sm-6">
        <div class="card card-stats">
          <div class="card-header card-header-danger card-header-icon">
            <div class="card-icon">
              <i class="material-icons">bug_report</i>
            </div>
            <p class="card-category">File count</p>
            <h3 class="card-title">{{sampleCount}}</h3>
          </div>
        </div>
      </div>

    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="card">          
          <form action="/upload" class="dropzone card-category" id="my-awesome-dropzone"></form>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12">
        <div class="card">
          <div class="card-header card-header-warning">
            <h4 class="card-title">Malware samples</h4>
            <p class="card-category">Samples stored in this instance of Andromal</p>
          </div>
          <div class="card-body table-responsive">
            <table class="table table-hover">
              <thead class="text-warning">
                <th>Filename</th>
              </thead>
              <tbody>
                {{#each samples}} 
                <tr>
                  <td>{{this.name}}</td>
                </tr>
                {{/each}}
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>